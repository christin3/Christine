        html {

        }

        #container-fluid, body {
            position: relative;

        }

        #overlay {
            position: relative;
            height: 100%;
            width: 100%;


        }

        canvas {
            overflow: auto;
            position: absolute;
            z-index: -1;
        }

        .content {
            position: absolute;
            top: 40vh;
            z-index: 0;
            left: 0;
            padding: 0;
            width: 100%;
            text-align: center;
            visibility: visible;

        }

        h1, i {
            font-family: 'Bungee Shade', cursive;
            color: white;
            font-size: 60px;
        }

        #footer {
            position : fixed;
            bottom : 0;
            height : 40px;
            margin-top : 40px;
            text-align: center;
            width: 100%;
            color: white;
            font-family: Bungee;

        }
